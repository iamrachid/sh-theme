{% comment %}
<!-- Start of Footer -->
<footer id="colophon" class="bgc-secondary pt-full total-footer-area"> 

  {% if section.settings.footer_top_enable %}
  <!-- Footer Widgets Area -->
  <div class="footer-widgets-area">
    <div class="container">
      <div class="footer-inner">
        <div class="row">

          {% for block in section.blocks %}
          {% case block.type %}

          {% when 'about_info' %}

          <div class="col-12 col-sm-12 col-md-6 col-lg-{{ block.settings.about_column }}">
            <aside class="widget-container">
              <div class="widget-content">

                <div class="footer-logo mb-half">
                  <img src="{% if block.settings.footer_logo %}{{ block.settings.footer_logo | img_url: 'master' }}
                            {% else %}https://via.placeholder.com/105x25 {% endif %}" alt="Footer Logo">
                </div>

                {% if block.settings.about_des != '' %}

                <p>{{ block.settings.about_des }}</p>

                {% endif %}

                <div class="footer-contact">

                  {% if block.settings.footer_info_1_content != '' %}
                  <p>{{ block.settings.footer_info_1_content }}</p>
                  {% endif %}

                  {% if block.settings.footer_info_2_content != '' %}
                  <p>{{ block.settings.footer_info_2_content }}</p>
                  {% endif %}

                  {% if block.settings.footer_info_3_content != '' %}
                  <p><span>Email:</span><a href="mailto:{{ block.settings.footer_info_3_content }}">{{ block.settings.footer_info_3_content }}</a></p>
                  {% endif %}

                </div>


              </div> <!-- end of widget-content -->
            </aside> <!-- end of widget-container -->
          </div>



          {% when 'footer_menu' %}

          <div class="col-12 col-sm-12 col-md-6 order-md-3 col-lg-{{ block.settings.menu_column }} order-lg-2">
            <aside class="widget-container">

              {% if block.settings.footer_menu_title != '' %}
              <h4 class="widgettitle">{{ block.settings.footer_menu_title }}</h4>
              {% endif %}

              <div class="widget-content">
                <div class="widgetized-menu">
                  <ul class="list-unstyled">
                    {% assign footer_custom_menu = block.settings.custom_menu_handle %}
                    {% assign footer_menu_item_limit = block.settings.menu_item_limit_footer %}

                    {% for link in linklists[footer_custom_menu].links limit: footer_menu_item_limit %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div> <!-- end of widget-content -->
            </aside> <!-- end of widget-container -->
          </div>


          {% when 'newslatter_social_feed' %}
          <div class="col-12 col-sm-12 col-md-6 order-md-2 col-lg-{{block.settings.feed_column}} order-lg-4">
            <aside class="widget-container">

              {% if block.settings.footer_newslatter_title != '' %}
              <h4 class="widgettitle">{{block.settings.footer_newslatter_title}}</h4>
              {% endif %}

              <div class="widget-content">
                <div class="newsletter-widget">

                  {% if block.settings.footer_newslatter_des != '' %}
                  <p>{{block.settings.footer_newslatter_des}}</p>
                  {% endif %}                  

                  <form action="{{ settings.newsletter_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll" class="mc-form input-group">
                      <input type="email" value="" name="EMAIL" class="email" placeholder="{{ settings.email_placeholder }}" required>
                      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <button id="mc-embedded-subscribe" class="default-btn" type="submit">Sign Up</button>
                    </div>
                  </form>

                </div>
              </div> <!-- end of widget-content -->
            </aside> <!-- end of widget-container -->

            {% if block.settings.footer_social_enable %}

            <aside class="widget-container">
              <div class="widget-content">
                <div class="social-widget mt-half">
                  <div class="socials d-flex align-items-center justify-content-center justify-content-md-start">
                    <ul class="list-inline">

                      {% if settings.social_icon_1_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_1_link }}" class="bg-facebook" title="Facebook" target="_blank"><i class="fa fa-{{ settings.social_icon_1_name }}"></i></a></li>
                      {% endif %}

                      {% if settings.social_icon_2_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_2_link }}" class="bg-twitter" title="Twitter" target="_blank"><i class="fa fa-{{ settings.social_icon_2_name }}"></i></a></li>
                      {% endif %}

                      {% if settings.social_icon_3_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_3_link }}" class="bg-gplus" title="Google Plus" target="_blank"><i class="fa fa-{{ settings.social_icon_3_name }}"></i></a></li>
                      {% endif %}

                      {% if settings.social_icon_4_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_4_link }}" class="bg-pinterest" title="Pinterest" target="_blank"><i class="fa fa-{{ settings.social_icon_4_name }}"></i></a></li>
                      {% endif %}

                      {% if settings.social_icon_5_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_5_link }}" class="bg-instagram" title="Instagram" target="_blank"><i class="fa fa-{{ settings.social_icon_5_name }}"></i></a></li>
                      {% endif %}

                      {% if settings.social_icon_6_name != blank %}
                      <li class="list-inline-item"><a href="{{ settings.social_icon_6_link }}" class="bg-linkedin" title="Linked In" target="_blank"><i class="fa fa-{{ settings.social_icon_6_name }}"></i></a></li>
                      {% endif %}
                    </ul>
                  </div>
                </div>
              </div> <!-- end of widget-content -->
            </aside> <!-- end of widget-container -->

            {% endif %}

          </div>


          {% endcase %}
          {% endfor %}


        </div> <!-- end of row -->
      </div> <!-- end of footer-inner -->
    </div> <!-- end of container -->
  </div> <!-- end of footer-widgets-area -->
  {% endif %}

  {% if section.settings.footer_bottom_enable %}
  <!-- Footer Copyright -->
  <div class="footer-copyright" style="background-color:{{ section.settings.copyright_area_bg_color }};">
    <div class="container">
      <div class="row align-items-center">

        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
          {{ section.settings.copy_right_text }}
        </div>

        {% if section.settings.payment_support_enable %}
        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
          <div class="footer-payment">
            <a href="{{section.settings.payment_image_url}}">
              <img src="{% if section.settings.payment_image %}{{ section.settings.payment_image | img_url: 'master' }}{% else %}https://via.placeholder.com/350x30 {% endif %}" alt="payment images">
            </a>
          </div>
        </div>
        {% endif %}

      </div> <!-- end of row -->
    </div> <!-- end of container -->
  </div> <!-- end of footer-copyright -->
  {% endif %}

</footer>
<!-- End of Footer -->
{% endcomment %}


<!--=================== Start of footer area ====================-->
<div class="footer-area">
  <div class="container">
    {% if section.settings.footer_top_enable %}
    <div class="row mb-40">
      <div class="col-lg-12">
        <div class="footer-content-wrapper border-top pt-40">
          <div class="row">

            {% for block in section.blocks %}
            {% case block.type %}

            {% when 'about_info' %}


            <div class="col-lg-{{ block.settings.about_column }} col-md-6">
              <!--=======  single footer widget  =======-->

              <div class="single-footer-widget">
                <div class="footer-logo mb-25">
                  <img src="{% if block.settings.footer_logo %}{{ block.settings.footer_logo | img_url: 'master' }}
                            {% else %}https://via.placeholder.com/140x40 {% endif %}" alt="Footer Logo">
                </div>

                {% if block.settings.footer_info_1_content != '' %}
                <div class="footer-text-block mb-10">
                  <h5 class="footer-text-block__title">Address</h5>
                  <p class="footer-text-block__content">{{ block.settings.footer_info_1_content }}</p>
                </div>
                {% endif %}

                {% if block.settings.footer_info_2_content != '' %}
                <div class="footer-text-block mb-10">
                  <h5 class="footer-text-block__title">Need Help?</h5>
                  <p class="footer-text-block__content">{{ block.settings.footer_info_2_content }}</p>
                </div>
                {% endif %}


                {% if block.settings.footer_social_enable %}

                <div class="footer-social-icon-block">

                  <ul>

                    {% if settings.social_icon_1_name != blank %}
                    <li><a href="{{ settings.social_icon_1_link }}" class="facebook-icon" title="Facebook" target="_blank"><i class="ion-social-{{ settings.social_icon_1_name }}"></i></a></li>
                    {% endif %}

                    {% if settings.social_icon_2_name != blank %}
                    <li><a href="{{ settings.social_icon_2_link }}" class="twitter-icon" title="Twitter" target="_blank"><i class="ion-social-{{ settings.social_icon_2_name }}"></i></a></li>
                    {% endif %}

                    {% if settings.social_icon_3_name != blank %}
                    <li><a href="{{ settings.social_icon_3_link }}" class="googleplus-icon" title="Google Plus" target="_blank"><i class="ion-social-{{ settings.social_icon_3_name }}"></i></a></li>
                    {% endif %}

                    {% if settings.social_icon_4_name != blank %}
                    <li><a href="{{ settings.social_icon_4_link }}" class="youtube-icon" title="Youtube" target="_blank"><i class="ion-social-{{ settings.social_icon_4_name }}"></i></a></li>
                    {% endif %}

                    {% if settings.social_icon_5_name != blank %}
                    <li><a href="{{ settings.social_icon_5_link }}" class="bg-instagram" title="Instagram" target="_blank"><i class="ion-social-{{ settings.social_icon_5_name }}"></i></a></li>
                    {% endif %}
                  </ul>

                </div>

                {% endif %}

              </div>

              <!--=======  End of single footer widget  =======-->
            </div>

            {% when 'instagram_feed' %}
            <div class="col-lg-{{block.settings.feed_column}} col-md-6 mt-sm-30">
              <!--=======  single footer widget  =======-->

              {% include 'instafeed' %}

              <!--=======  End of single footer widget  =======-->
            </div>

            {% when 'footer_menu' %}

            <div class="col-lg-{{ block.settings.menu_column }} col-md-6 mt-md-30 mt-sm-30">
              <div class="single-footer-widget">

                {% if block.settings.footer_menu_title != '' %}
                <h5 class="montserrat-footer-widget-title">{{ block.settings.footer_menu_title }}</h5>
                {% endif %}

                <div class="footer-navigation">
                  <nav>
                    <ul>
                      {% assign footer_custom_menu = block.settings.custom_menu_handle %}
                      {% assign footer_menu_item_limit = block.settings.menu_item_limit_footer %}

                      {% for link in linklists[footer_custom_menu].links limit: footer_menu_item_limit %}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  </nav>
                </div> <!-- end of widget-content -->

              </div> <!-- end of widget-container -->
            </div>



            {% when 'footer_blog' %}
            <div class="col-lg-{{ block.settings.blog_column }} col-md-6 mt-sm-30">
              <!--=======  single footer widget  =======-->

              <div class="single-footer-widget">

                {% if block.settings.section_title != '' %}
                <h5 class="montserrat-footer-widget-title mb-25">{{ block.settings.section_title }}</h5>
                {%- endif -%}

                
                {% assign blog = blogs[block.settings.blog_handle] %}
                {% assign blog_limit = block.settings.blog_limit_handle %}
                
                <div class="footer-blog-post-slider-wrapper">
                  <div class="ht-slick-slider"
                                            data-slick-setting='{
                                                "slidesToShow": 1,
                                                "slidesToScroll": 1,
                                                "dots": false,
                                                "autoplay": false,
                                                "autoplaySpeed": 5000,
                                                "speed": 1000,
                                                "arrows": false,
                                                "rows": 2
                                            }'
                                            data-slick-responsive='[
                                                {"breakpoint":1501, "settings": {"slidesToShow": 1} },
                                                {"breakpoint":1199, "settings": {"slidesToShow": 1} },
                                                {"breakpoint":991, "settings": {"slidesToShow": 1} },
                                                {"breakpoint":767, "settings": {"slidesToShow": 1} },
                                                {"breakpoint":575, "settings": {"slidesToShow": 1} },
                                                {"breakpoint":479, "settings": {"slidesToShow": 1} }
                                            ]'
                                            >
                    {% for article in blog.articles limit: blog_limit %}

                    <!--=======  single footer blog post  =======-->
                    <div class="footer-blog-post-wrapper">
                      <div class="single-footer-blog-post">

                        {% if article.image %}
                        <div class="single-footer-blog-post__image">
                          <a href="{{ article.url }}">
                            <img src="{{ article | img_url: '100x80', crop:'center'}}" class="img-fluid" alt="">
                          </a>
                        </div>
                        {% endif %}

                        <div class="single-footer-blog-post__content">
                          <h5 class="blog-post-title"><a href="{{ article.url }}">{{ article.title }}</a></h5>
                          <div class="blog-post-meta">
                            <p class="author-name">by <span>{{ article.author }}</span></p>     
                            <p class="post-date">{{ article.published_at | date: '%d %b, %y' }}</p>
                          </div>
                        </div>
                      </div>
                    </div>                    
                    <!--=======  End of single footer blog post  =======-->

                    {% endfor %}
                  </div>
                </div>
              </div>

              <!--=======  End of single footer widget  =======-->
            </div>

            {% endcase %}
            {% endfor %}
            
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    
    <div class="row">
      <div class="col-lg-12">
        <div class="copyright-text-area">
          <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-left mb-sm-15">
              <div class="copyright-text">
                {{ section.settings.copy_right_text }}
              </div>
            </div>
            <div class="col-md-6 text-center text-md-right">
              
              {% if section.settings.payment_support_enable %}
              <div class="payment-logo">
                
                <a href="{{section.settings.payment_image_url}}">
                  <img src="{% if section.settings.payment_image %}{{ section.settings.payment_image | img_url: 'master' }}{% else %}
                            https://via.placeholder.com/286x25 {% endif %}" class="img-fluid" alt="payment images">
                </a>
                
              </div>
              {% endif %}
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>    
<!--=================== End of footer area  ====================-->









