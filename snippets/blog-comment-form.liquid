{% form 'new_comment', article %}

{{ form.errors | default_errors }}

<!--=======  comment form container  =======-->

<div class="comment-form-container">
  <h3 class="comment-form-title">{{ 'blogs.comments.title' | t }}</h3>
  <p>Your email address will not be published. Required fields are marked *</p>

  <!--=======  comment form  =======-->

  <div class="comment-form">
    <form action="#">
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <label>Comment</label>
            <textarea class="custom-textarea" name="comment[body]" id="commentBody"  placeholder="{{ 'blogs.comments.message' | t }}">{{ form.body }}</textarea>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <label>Name <span class="required">*</span></label>
            <input type="text" class="{% if form.errors contains 'author' %}error{% endif %}" name="comment[author]" id="commentAuthor" value="{{ form.author }}" placeholder="{{ 'blogs.comments.name' | t }}">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <label>Email <span class="required">*</span></label>
            <input type="text" class="{% if form.errors contains 'email' %}error{% endif %}" name="comment[email]" id="commentEmail" value="{{ form.email }}" placeholder="{{ 'blogs.comments.email' | t }}">
          </div>
        </div>
        <div class="col-lg-12">
          <button class="fl-btn" type="submit">{{ 'blogs.comments.post' | t }}</button>
        </div>
      </div>
    </form>
  </div>

  <!--=======  End of comment form  =======-->
</div>

{% endform %}