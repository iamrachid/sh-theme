{% if customer %}
<a class="action-wishlist tile-actions--btn flex wishlist-btn wishlist" href="#" data-product-handle="{{ product.handle }}">
  <span class="add-wishlist"><i class="icon-heart"></i></span>
  <span class="loading-wishlist"><i class="ion-gear-b"></i></span>
  <span class="remove-wishlist"><i class="ion-android-favorite"></i></span>
</a>
{% else %}
<a class="wishlist" href="/account/login" title="Wishlist">
  <i class="icon-heart"></i>
</a>
{% endif %}
