{% if settings.breadcrumb_banner_enable %}
<!--====================  breadcrumb area ====================-->    
<div class="breadcrumb-area pt-10 pb-10 border-bottom {% unless template == 'page.contact' %} mb-40 {% endunless %}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <!--=======  breadcrumb content  =======-->
        {% if settings.breadcrumb_title_enable %}
        <h1 class="breadcrumbs-title">{{ page_title }}</h1> 
        {% endif %}
        
        <div class="breadcrumb-content">

          {% include 'breadcrumb-builtin' %}
          
        </div>

        <!--=======  End of breadcrumb content  =======-->
      </div>
    </div>
  </div>
</div>    
<!--====================  End of breadcrumb area  ====================-->
{% endif %}