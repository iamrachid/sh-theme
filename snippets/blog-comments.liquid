<h3 class="comment-counter">{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h3>
<div class="comment-container mb-40">
  <!--=======  single comment  =======-->
  {% for comment in article.comments %}
  <div class="single-comment">

    <div class="image">
        {% if section.settings.commentator_image %}
        <img src="{{ section.settings.commentator_image | img_url: '100x100', crop: 'center' }}" alt="{{ section.settings.commentator_image.alt }}">
        {% else %}
        <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 | append: '?s=200' }}" />
        {% endif %}
    </div>
    
    <div class="content">
      <h3 class="user">{{ comment.author }} <span class="comment-time">{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span></h3>
      <p class="comment-text">{{ comment.content }}</p>
    </div>

  </div>
  {% endfor %}
  <!--=======  End of single comment  =======-->

</div>